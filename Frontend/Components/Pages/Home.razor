@page "/home"
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Home - Cerâmica Canelas</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <script>
   
    </script>
    <script src="/js/main.js"></script>
</head>
<body>
    <div class="main-content">
        <NavMenu />
        <div id="form-container">
            <!-- Header da Empresa -->
            <div class="company-header">
                <div class="logo-container">
                    <img src="images/Logo.png" alt="Logo Cerâmica Canelas" class="logo" />
                </div>
                <h1 class="company-title">CERÂMICA CANELAS</h1>
                <p class="company-subtitle">Sistema Integrado de Gestão Empresarial</p>
            </div>

            <!-- Grid de Funcionalidades -->
            <div class="features-grid">
                <!-- Card Almoxarifado -->
                <div class="feature-card">
                    <div class="feature-header">
                        <div class="feature-icon almoxarifado-icon">
                            <i class="fas fa-warehouse"></i>
                        </div>
                        <div>
                            <h3 class="feature-title">Sistema de Almoxarifado</h3>
                            <p class="feature-subtitle">Gestão Completa de Estoque</p>
                        </div>
                    </div>
                    <p class="feature-description">
                        Controle total do seu estoque com funcionalidades avançadas para gerenciamento de produtos, materiais e movimentações.
                    </p>
                    <ul class="feature-list">
                        <li>Controle de entrada e saída de produtos</li>
                        <li>Gestão de fornecedores e compradores</li>
                        <li>Relatórios detalhados de movimentação</li>
                        <li>Controle de níveis mínimos e máximos</li>
                        <li>Rastreabilidade completa de produtos</li>
                    </ul>
                </div>

                <!-- Card Financeiro -->
                <div class="feature-card">
                    <div class="feature-header">
                        <div class="feature-icon financeiro-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <div>
                            <h3 class="feature-title">Sistema Financeiro</h3>
                            <p class="feature-subtitle">Controle Financeiro Completo</p>
                        </div>
                    </div>
                    <p class="feature-description">
                        Gerencie todas as operações financeiras da sua empresa com precisão e eficiência através de ferramentas integradas.
                    </p>
                    <ul class="feature-list">
                        <li>Balancetes de entradas e saídas</li>
                        <li>Controle de movimento de caixa</li>
                        <li>Relatórios financeiros detalhados</li>
                        <li>Gestão de contas a pagar e receber</li>
                        <li>Análise de fluxo de caixa</li>
                    </ul>
                </div>
            </div>

            <!-- Seção de Estatísticas -->
            <div class="stats-section">
                <h3 class="stats-title">Recursos do Sistema</h3>
                <div class="stats-grid">
                    <div class="stat-item">
                        <div class="stat-icon">
                            <i class="fas fa-boxes"></i>
                        </div>
                        <div class="stat-label">Produtos</div>
                        <div class="stat-value">Ilimitados</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-icon">
                            <i class="fas fa-file-invoice-dollar"></i>
                        </div>
                        <div class="stat-label">Relatórios</div>
                        <div class="stat-value">15+ Tipos</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-icon">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="stat-label">Usuários</div>
                        <div class="stat-value">Múltiplos</div>
                    </div>
                    <div class="stat-item">
                        <div class="stat-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <div class="stat-label">Segurança</div>
                        <div class="stat-value">Total</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card de boas-vindas original (oculto) -->
        <div class="welcome-card" id="welcome-message">
            <h1 class="welcome-title">Bem-vindo ao Sistema</h1>
            <p class="welcome-text">Selecione uma opção no menu lateral para começar.</p>
        </div>
    </div>
</body>
</html>