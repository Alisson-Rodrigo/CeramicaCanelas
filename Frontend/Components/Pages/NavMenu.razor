    <div class="main-content">
        <div class="welcome-card" id="welcome-message">
            <h1 class="welcome-title">Bem-vindo ao Sistema Cerâmica Canelas</h1>
            <p class="welcome-text">Selecione uma opção no menu lateral para começar</p>
            <div id="form-container"></div>

        </div>
    </div>

    <script>
        function setActive(element) {
            // Remove active class from all menu items
            document.querySelectorAll('.menu-item').forEach(item => {
                item.classList.remove('active');
            });
            
            // Add active class to clicked item
            element.classList.add('active');
        }

        function toggleSubmenu(element) {
            const submenu = element.nextElementSibling;
            const icon = element.querySelector('.expand-icon');
            
            if (submenu.classList.contains('expanded')) {
                submenu.classList.remove('expanded');
                icon.classList.remove('rotated');
            } else {
                submenu.classList.add('expanded');
                icon.classList.add('rotated');
            }
        }

        // Initialize - expand submenu by default and set first item as active
        document.addEventListener('DOMContentLoaded', function() {
            const submenu = document.getElementById('almoxarifado-submenu');
            const icon = document.querySelector('.expand-icon');
            
            submenu.classList.add('expanded');
            icon.classList.add('rotated');
            
            // Set first menu item as active
            document.querySelector('.menu-item').classList.add('active');
        });
          function setActive(element) {
        document.querySelectorAll('.menu-item').forEach(item => {
            item.classList.remove('active');
        });
        element.classList.add('active');
    }

    function toggleSubmenu(element) {
        const submenu = element.nextElementSibling;
        const icon = element.querySelector('.expand-icon');
        submenu.classList.toggle('expanded');
        icon.classList.toggle('rotated');
    }

    function loadProductForm() {
        document.getElementById('welcome-message').style.display = 'none';

        const formHTML = `
            <h2>Cadastro de Produto</h2>
            <form class="product-form">
                <label>ID: <input type="text" name="id" readonly></label><br>
                <label>Codigo Do Produto: <input type="text" name="sku"></label><br>
                <label>Nome: <input type="text" name="nome"></label><br>
                <label>Unidade de Medida: 
                    <select name="unidade">
                        <option value="unidade">Unidade</option>
                        <option value="kg">Kg</option>
                        <option value="metro">Metro</option>
                        <option value="litro">Litro</option>
                    </select>
                </label><br>
                <label>Estoque Mínimo: <input type="number" name="estoque_minimo"></label><br>
                <label>Estoque Inicial: <input type="number" name="estoque_inicial"></label><br>
                <label>Valor Unitário: <input type="number" step="0.01" name="valor_unitario"></label><br>
                <label>Data de Cadastro: <input type="date" name="data_cadastro"></label><br>
                <label>Categoria: <input type="text" name="categoria"></label><br>
                <label>Item Devolvível?
                    <select name="devolvivel">
                        <option value="sim">Sim</option>
                        <option value="nao">Não</option>
                    </select>
                </label><br>
                <label>Observações: <textarea name="observacoes" rows="3"></textarea></label><br>
                <button type="submit">Salvar Produto</button>
            </form>
        `;

        document.getElementById('form-container').innerHTML = formHTML;
    }

    // Inicialização
    document.addEventListener('DOMContentLoaded', function() {
        const submenu = document.getElementById('almoxarifado-submenu');
        const icon = document.querySelector('.expand-icon');
        submenu.classList.add('expanded');
        icon.classList.add('rotated');

        document.querySelector('.menu-item').classList.add('active');
    });
    function loadEmployeeForm() {
    document.getElementById('welcome-message').style.display = 'none';

    const formHTML = `
        <h2>Cadastro de Funcionário</h2>
        <form class="employee-form">
            <label>ID: <input type="text" name="id" readonly></label><br>
            <label>Nome Completo: <input type="text" name="nome_completo"></label><br>
            <label>Cargo: <input type="text" name="cargo"></label><br>
            <label>Setor: 
                <select name="setor">
                    <option value="producao">Produção</option>
                    <option value="manutencao">Manutenção</option>
                    <option value="expedicao">Expedição</option>
                    <option value="administrativo">Administrativo</option>
                </select>
            </label><br>
            <label>CPF: <input type="text" name="cpf"></label><br>
            <label>Matrícula: <input type="text" name="matricula"></label><br>
            <label>Status:
                <select name="status">
                    <option value="ativo">Ativo</option>
                    <option value="inativo">Inativo</option>
                </select>
            </label><br>
            <button type="submit">Salvar Funcionário</button>
        </form>
    `;

    document.getElementById('form-container').innerHTML = formHTML;
}
function loadUserForm() {
    document.getElementById('welcome-message').style.display = 'none';

    const formHTML = `
        <h2>Cadastro de Usuário do Sistema</h2>
        <form class="user-form" onsubmit="event.preventDefault(); encryptPassword(this);">
