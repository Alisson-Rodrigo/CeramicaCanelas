@page "/validarsenha"
    <div class="container">
        <div class="header">
            <div class="logo"></div>
            <h1>CER√ÇMICA CANELAS</h1>
            <p>Sistema de Almoxarifado</p>
        </div>

        <div id="message"></div>

        <form id="resetForm">
            <div class="form-group">
                <label class="form-label" for="password">Nova Senha</label>
                <div class="password-input-wrapper">
                    <input type="password"
                           class="form-input"
                           id="password"
                           placeholder="Digite sua nova senha"
                           required>
                    <button type="button" class="toggle-password" onclick="togglePassword('password')">üëÅÔ∏è</button>
                </div>
                <div class="password-requirements">
                    <div class="requirement" id="length">M√≠nimo de 8 caracteres</div>
                    <div class="requirement" id="uppercase">Pelo menos 1 letra mai√∫scula</div>
                    <div class="requirement" id="lowercase">Pelo menos 1 letra min√∫scula</div>
                    <div class="requirement" id="number">Pelo menos 1 n√∫mero</div>
                    <div class="requirement" id="special">Pelo menos 1 caractere especial</div>
                </div>
            </div>

            <div class="form-group">
                <label class="form-label" for="confirmPassword">Confirmar Nova Senha</label>
                <div class="password-input-wrapper">
                    <input type="password"
                           class="form-input"
                           id="confirmPassword"
                           placeholder="Confirme sua nova senha"
                           required>
                    <button type="button" class="toggle-password" onclick="togglePassword('confirmPassword')">üëÅÔ∏è</button>
                </div>
                <div class="helper-text">
                    Digite novamente a senha para confirma√ß√£o
                </div>
            </div>

            <button type="submit" class="submit-btn">
                Redefinir Senha
            </button>
        </form>

        <a href="/" class="back-link">‚Üê Voltar ao Login</a>
    </div>

    <script >// Fun√ß√£o para mostrar/esconder a senha
function togglePassword(inputId) {
    const input = document.getElementById(inputId);
    if (input.type === "password") {
        input.type = "text";
    } else {
        input.type = "password";
    }
}

// Aguarda o carregamento completo da p√°gina para executar o script
document.addEventListener('DOMContentLoaded', () => {

    // Seleciona os elementos do formul√°rio
    const resetForm = document.getElementById('resetForm');
    const passwordInput = document.getElementById('password');
    const confirmPasswordInput = document.getElementById('confirmPassword');
    const messageDiv = document.getElementById('message');
    const submitButton = resetForm.querySelector('button[type="submit"]');

    // Fun√ß√£o para exibir mensagens
    function showMessage(text, type) {
        messageDiv.textContent = text;
        messageDiv.className = type; // 'success' ou 'error'
        messageDiv.style.display = 'block';
    }

    // Adiciona um "ouvinte" para o evento de envio do formul√°rio
    resetForm.addEventListener('submit', async (event) => {
        // Previne o comportamento padr√£o do formul√°rio (que recarregaria a p√°gina)
        event.preventDefault();

        // Desabilita o bot√£o para evitar m√∫ltiplos envios
        submitButton.disabled = true;
        submitButton.textContent = 'Aguarde...';

        // 1. Pega o token da URL
        const params = new URLSearchParams(window.location.search);
        const token = params.get('token');

        if (!token) {
            showMessage('ERRO: Token de redefini√ß√£o n√£o encontrado na URL.', 'error');
            submitButton.disabled = false;
            submitButton.textContent = 'Redefinir Senha';
            return;
        }

        // 2. Pega os valores dos campos de senha
        const password = passwordInput.value;
        const confirmPassword = confirmPasswordInput.value;

        // Valida√ß√£o simples: verifica se as senhas s√£o iguais
        if (password !== confirmPassword) {
            showMessage('As senhas n√£o coincidem. Tente novamente.', 'error');
            submitButton.disabled = false;
            submitButton.textContent = 'Redefinir Senha';
            return;
        }
        
        // 3. Monta a URL da API com os par√¢metros
        const apiUrl = `https://api.ceramicacanelas.shop/api/auth/validation-reset?Token=${encodeURIComponent(token)}&Password=${encodeURIComponent(password)}&ConfirmPassword=${encodeURIComponent(confirmPassword)}`;

        // 4. Envia a requisi√ß√£o para a API
        try {
            // Usamos o m√©todo POST conforme a boa pr√°tica para altera√ß√µes de dados
            const response = await fetch(apiUrl, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            if (response.ok) {
                // Sucesso!
                showMessage('Senha redefinida com sucesso! Voc√™ ser√° redirecionado para o login.', 'success');
                // Oculta o formul√°rio ap√≥s o sucesso
                resetForm.style.display = 'none'; 
                
                // Redireciona para a p√°gina de login ap√≥s 3 segundos
                setTimeout(() => {
                    window.location.href = 'URL_DA_SUA_PAGINA_DE_LOGIN'; 
                }, 3000);

            } else {
                // Erro vindo do servidor
                const errorData = await response.json(); // Tenta ler a resposta de erro em JSON
                const errorMessage = errorData.message || 'Ocorreu um erro ao redefinir a senha. Verifique os dados ou o token.';
                showMessage(errorMessage, 'error');
            }

        } catch (error) {
            // Erro de rede ou conex√£o
            console.error('Falha na comunica√ß√£o com a API:', error);
            showMessage('N√£o foi poss√≠vel conectar ao servidor. Verifique sua conex√£o.', 'error');
        } finally {
            // Reabilita o bot√£o (exceto em caso de sucesso)
            if (!resetForm.style.display) {
                submitButton.disabled = false;
                submitButton.textContent = 'Redefinir Senha';
            }
        }
    });
});</script>

